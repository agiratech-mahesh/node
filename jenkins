pipeline {
    agent any 
    stages {
        stage('Verify') {
            steps {
                sh '''
                    docker version
                    docker-compose version
                '''
            }
        }
            stage('npm') {
                steps {
                    sh ' npm install'
                }
            }
            stage('docker compose') {
                steps {
                    sh 'docker-compose up -d '
                }
            }
             stage('build') {
                steps {
                    sh ' docker-compose build '
                 }
              }  
        }
    }

